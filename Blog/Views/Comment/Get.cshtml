@model Blog.DAL.Models.Comment

@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Show Comment by ID - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Content</th>
                    <th>Posted Date</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td>@Model.Id</td>
                    <td>@Model.Content</td>
                    <td>@Model.PostedDate</td>
                    <td>
                        <a asp-area="" asp-controller="Comment" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    </td>
                    <td>
                        <form method="post" asp-controller="Comment" asp-action="Delete">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>

            </tbody>

        </table>
    }
    else
    {
        <p>No comments found!</p>
    }
</div>

