@model Blog.DAL.Models.Comment

@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add new comment</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Content</label/>
            <input type="text" class="form-control" id="content" asp-for="Content"/>
        </div>

        <div class="mb-3">
            <label class="form-label">Posted Date</label/>
            <input type="date" class="form-control" id="postedDate" asp-for="PostedDate"/>
        </div>

        <div class="mb-3">
            <label class="form-label">User ID</label/>
            <input type="text" class="form-control" id="userId" asp-for="UserId"/>
        </div> 

         <div class="mb-3">
            <label class="form-label">Article ID</label/>
            <input type="text" class="form-control" id="articleId" asp-for="ArticleId"/>
        </div>
       
        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Save</button>

        </div>

    </form>
</div>


 