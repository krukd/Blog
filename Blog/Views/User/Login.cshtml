@model Blog.DAL.Models.LoginViewModel

@{
    ViewData["Title"] = "Вход";
}

<h3 class="center">Вход в акаунт</h3>
<form method="post" asp-controller="User" asp-action="Login">
    <div asp-validation-summary="ModelOnly"></div>
    
    <div class="mb-3">
        <label>Email</label>
        <input asp-for="Email" class="form-control" placeholder="электронная почта" required>
        <span asp-validation-for="Email" class="text-danger"></span>
        
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
        <label>Password</label>
        <input asp-for="Password" class="form-control" placeholder="введите пароль" required>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>


