@model Blog.DAL.Models.EditArticleViewModel

@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit article</h1>
    </div>
</div>

<div class="container py-5">

    @if (Model != null)
    {
        <form method="post">

            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" id="id" class="form-control" asp-for="Id" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Title</label>
                <input type="text" id="title" class="form-control" asp-for="Title" />
            </div>

            <div class="mb-3">
                <label class="form-label">Content</label>
                <input type="text" id="content" class="form-control" asp-for="Content" />
            </div>

            <div class="form-group" style="margin-top:3%">

                @if (Model.Tags.Count != 0)
                {
                    @foreach (var tag in Model.Tags)
                    {
                        @if (Model.TagsSelected.Contains(tag))
                        {
                            <input class="form-check-input" type="checkbox" name="SelectedTags" value="@tag.Id" checked>
                            <label class="form-check-label" style="padding-right:3%">@tag.Content</label>
                        }
                        else
                        {
                            <input class="form-check-input" type="checkbox" name="SelectedTags" value="@tag.Id">
                            <label class="form-check-label" style="padding-right:3%">@tag.Content</label>
                        }
                    }
                }

            </div>

            <div class="mb-3">

                <div class="d-flex">
                    <button type="submit" class="btn btn-dark">Update</button>
                    
                </div>

            </div>

        </form>
    }
    else
    {
        <p>Article not found!</p>
    }

</div>

